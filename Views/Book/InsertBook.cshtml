@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InsertBook</title>
</head>
<body>
    <form action="InsertBook" method="post">
        @Html.AntiForgeryToken()



        <div class="form-group col-lg-6 offset-lg-3 col-md-6 offset-md-3 col-sm-6 offset-sm-3 col-xs-6 offset-xs-3">
            <label for="name">name:</label><br>
            <input type="text" class="form-control" id="name" name="name" pattern=[a-zA-Z\s0-9]{3,20}$ maxlength=20 oninvalid="alert('You must fill out the form!');" required><br>

            <label for="isbn">isbn:</label><br>
            <input type="text" class="form-control" id="isbn" name="isbn" oninvalid="alert('Isbn Bayad beyne horoof a-z va aadad 0-20 vared shavadad');" pattern=[a-zA-Z\s0-9]{3,20}$ required><br>

            <label for="publisher">publisher:</label><br>
            <input type="text" class="form-control" id="publisher" name="publisher"  oninvalid="alert('Publisher Bayad beyne horoof a-z va aadad 0-20 vared shavadad');"pattern=[a-zA-Z\s0-9]{3,20}$ maxlength=20 required><br>

            <label for="author"> author:</label><br>
            <input type="text" class="form-control" id="author" name="author"  oninvalid="alert('Author Bayad beyne horoof a-z va aadad 0-20 vared shavadad');" pattern=[a-zA-Z\s0-9]{3,20}$ maxlength=20 required><br>

            <label for="Quantity">Quantity:</label><br>
            <input type="text" class="form-control" id="quantity" name="quantity" oninvalid="alert('Quantity Bayad beyne aadad 0-9999 vared shavadad');"pattern=[0-9]{0,4} required><br>
            <br>
            <br>

            <button type="submit"  class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save-fill" viewBox="0 0 16 16">
                    <path d="M8.5 1.5A1.5 1.5 0 0 1 10 0h4a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h6c-.314.418-.5.937-.5 1.5v7.793L4.854 6.646a.5.5 0 1 0-.708.708l3.5 3.5a.5.5 0 0 0 .708 0l3.5-3.5a.5.5 0 0 0-.708-.708L8.5 9.293V1.5z"></path>
                </svg>
                Save
            </button>
            </div>
    </form>


</body>
</html>
